<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.picturesshowing">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Pictures Showing App"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".FullActivity"></activity>
        <activity
            android:name=".RecyclerViewLinearActivity"
            android:label="RecyclerView Linear"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ListViewActivity"
            android:label="ListView"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".GridViewActivity"
            android:label="GridView"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".RecyclerViewGridActivity"
            android:label="RecyclerView Grid"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.picturesshowing.MainActivity" />
        </activity>
    </application>

</manifest>